<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#8555" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!--  Top color -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#8aaa" />
            <corners android:radius="2dp" />
            <padding
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:left="2dp"/>
        </shape>
    </item>
</layer-list>